<!DOCTYPE html>
<html>
    <head>
        <style>
            table,
            th,
            td {
                border: 1px solid black;
            }
            </style>
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
            <link href="/style.css" rel="stylesheet">
    </head>
  <body>
      <header class="header"> Assignment-4 </header>
    <table style="width: 100%">
      <tr>
        <th>Name</th>
        <th>Email</th>
    
        <th>Select</th>
        <th>Delete</th>
      </tr>

      <% users.forEach( user => { %> 
      <tr class="null">
        <td class="<%=user.isPromoted%>"><%= user.name %></td>
        <td class="<%=user.isPromoted%>"><%= user.email %></td>
        
        <td>
          <form action="/users/<%= user._id%>/?_method=PUT" method="POST">
            <button  class="btn btn-success" id="edit-<%= user.name %>" type="submit">Promote/Demote</button>
          </form>
        </td>
        <td>
          <form action="/users/<%= user._id%>/?_method=DELETE" method="POST">
            <button class="btn btn-danger" id="edit-<%= user.name %>" type="submit">Delete</button>
          </form>
        </td>
      </tr>
      <% }) %>
    </table>
    <a href="/form"> Add user </a>
  </body>
</html>
